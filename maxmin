
#include <stdio.h>

int main()
{
    float arr[20],min,max;
    
    for(int i=0;i<20;i++){
        printf("enter a value for arr[%d] = ",i);
        scanf("%f",&arr[i]);
    }
    min=arr[0];
    max=arr[0];
    for(int i=0;i<20;i++){
        if(arr[i]<min){
            min=arr[i];
        }
        if(arr[i]>max){
            max=arr[i];
        }
    }
    printf("min = %f\n",min);
    printf("max = %f",max);

    
    return 0;
    
}
